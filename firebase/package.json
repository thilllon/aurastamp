{
  "name": "remix",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "prebuild": "rm -rf ./build ./public/build",
    "build": "run-s build:*",
    "build:css": "pnpm generate:css --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "pnpm generate:css --watch",
    "dev:remix": "remix dev --port 3000",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --fix --cache .",
    "start": "remix-serve",
    "_start": "cross-env NODE_ENV=production node --max-old-space-size=8192 ./build/server.js",
    "_start:mocks": "cross-env NODE_ENV=production node --require ./mocks --require dotenv/config ./build/server.js",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "pnpm build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down -v",
    "format": "prettier --write --list-different .",
    "typecheck": "tsc && tsc -p cypress",
    "validate": "run-p \"test --run\" lint typecheck test:e2e:run",
    "release": "release-it"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.15",
    "@heroicons/react": "^2.0.18",
    "@isaacs/express-prometheus-middleware": "^1.2.1",
    "@node-rs/bcrypt": "^1.7.1",
    "@radix-ui/react-slot": "^1.0.2",
    "@remix-run/express": "^1.18.1",
    "@remix-run/node": "^1.18.1",
    "@remix-run/react": "^1.18.1",
    "@remix-run/serve": "^1.18.1",
    "@remix-run/server-runtime": "^1.18.1",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^1.2.1",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "firebase": "^10.3.1",
    "firebase-admin": "^11.10.1",
    "framer-motion": "^10.12.18",
    "isbot": "^3.6.12",
    "lucide-react": "^0.274.0",
    "morgan": "^1.10.0",
    "prom-client": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-image-crop": "^10.1.5",
    "react-use": "^17.4.0",
    "react-youtube": "^10.1.0",
    "remix": "^1.18.1",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "tiny-invariant": "^1.3.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@faker-js/faker": "^8.0.2",
    "@remix-run/dev": "^1.18.1",
    "@remix-run/eslint-config": "^1.18.1",
    "@tailwindcss/forms": "^0.5.3",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.44.0",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.1",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitejs/plugin-react": "^4.0.2",
    "@vitest/coverage-c8": "^0.33.0",
    "autoprefixer": "^10.4.15",
    "binode": "^1.0.5",
    "c8": "^8.0.0",
    "commitizen": "^4.3.0",
    "commitlint": "^17.6.6",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "cypress": "^12.17.0",
